<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="midlast" prefHeight="768.0" prefWidth="1143.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NewsController.Dashboard_Back">
        <AnchorPane prefHeight="756.0" prefWidth="1179.0" styleClass="middle-menu">
            <fx:include source="/fxml/UserFxml/SidebarDashboard.fxml"/>

            <children>
                <VBox alignment="CENTER" layoutX="972.0" layoutY="198.0" prefHeight="150.0" spacing="10">

                    <Button fx:id="commentsView" mnemonicParsing="false" onAction="#showComments" prefHeight="34.0" prefWidth="150.0" style="-fx-background-color: #f00020; -fx-background-radius: 100;" text="View Comments" textFill="WHITE" />
                    <Button fx:id="AddPostButton" mnemonicParsing="false" onAction="#openAddPostInterface" prefHeight="34.0" prefWidth="150.0" style="-fx-background-color: #2A914D; -fx-background-radius: 100;" text="Add News" textFill="WHITE" />
                    <Button fx:id="showStatsButton" mnemonicParsing="false" onAction="#showStats" prefHeight="34.0" prefWidth="150.0" styleClass="btn-trans" text="Show Post Stats">

                        <style>
                            -fx-background-color: #007bff; /* Blue color */
                            -fx-background-radius: 100; /* Rounded corners */
                            -fx-text-fill: white; /* Text color */
                        </style>
                    </Button>
                </VBox>

                <ScrollPane layoutX="316.0" layoutY="110.0" prefHeight="623.0" prefWidth="615.0">
                    <content>
                        <VBox fx:id="postContainer" prefHeight="562.0" prefWidth="586.0" />
                    </content>
                </ScrollPane>
            <TextField fx:id="searchBarEvents" layoutX="997.0" layoutY="150.0" promptText="search..." />
            </children>
            <stylesheets>
                <URL value="@/img/UI.css" />
                <URL value="@/img/UI.css" />
            </stylesheets>
        </AnchorPane>
</AnchorPane>
