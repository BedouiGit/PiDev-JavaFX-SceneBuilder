<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ForgetPassword">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0">
            <left>
                <AnchorPane prefHeight="400.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                  <ImageView fitHeight="408.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@imges/portfolio/portfolio-08.jpg" />
                     </image>
                  </ImageView>
                    </children>
                </AnchorPane>
            </left>
            <center>
                <AnchorPane prefHeight="400.0" prefWidth="373.0" style="-fx-background-color: #E8F9FD;" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="codeLabel" layoutX="71.0" layoutY="183.0" text="code" visible="false">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="emailTextfield" layoutX="101.0" layoutY="118.0" promptText="Email" />
                        <Button fx:id="loginButton" layoutX="288.0" layoutY="358.0" mnemonicParsing="false" onAction="#getVerificationCode" prefHeight="30.0" prefWidth="50.0" style="-fx-background-color: #2d3047;" text="Send" textFill="WHITE" />
                        <Label fx:id="invalidText" alignment="CENTER" layoutX="92.0" layoutY="318.0" prefHeight="30.0" prefWidth="242.0" textFill="RED" />
                        <TextField fx:id="codeField" layoutX="138.0" layoutY="180.0" promptText="Code" visible="false" />
                        <Button fx:id="verifierButton" layoutX="147.0" layoutY="348.0" mnemonicParsing="false" onAction="#changePassword" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #2d3047;" text="Verifier" textFill="WHITE" visible="false" />
                        <Button fx:id="changeButton" layoutX="263.0" layoutY="348.0" mnemonicParsing="false" onAction="#updatePassword" prefHeight="25.0" prefWidth="100.0" style="-fx-background-color: #2d3047;" text="Change" textFill="WHITE" visible="false" />
                        <Label fx:id="passwordL" layoutX="65.0" layoutY="240.0" text="Password" visible="false">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Label fx:id="confirmL" layoutX="65.0" layoutY="281.0" prefHeight="20.0" prefWidth="60.0" text="Confirm" visible="false">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <PasswordField fx:id="password" layoutX="138.0" layoutY="238.0" promptText="password" visible="false" />
                        <PasswordField fx:id="confirmpassword" layoutX="138.0" layoutY="279.0" promptText="Confirm" visible="false" />
                    <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="82.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@images/NFTUN.png" />
                        </image>
                    </ImageView>
                        <Button layoutX="20.0" layoutY="355.0" mnemonicParsing="false" onAction="#goBack" prefHeight="30.0" prefWidth="49.0" style="-fx-background-color: #2d3047;" text="Back" textFill="WHITE" />

                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
